{% extends "base-ABM.html" %}
{% load staticfiles %}

{% block title %}
	<title>Monodrogas</title>
{% endblock %}

{% block panel-title-ABM %}
    <h3 class="panel-title">Monodrogas</h3>
{% endblock %}

{% block grid %}
    <table id="example" class="table table-hover table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr class="info">
            <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            {% for monodroga in monodrogas %}

                <tr class="clickeable" data-id="{{ monodroga.id }}">
                    <td>{{monodroga.nombre}}</td>
                </tr>

            {% endfor %}
        </tbody>
    </table>
{% endblock %}

