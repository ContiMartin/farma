{% block more-scripts %}
    <script>
        $(document).ready(function(){
            $("#baja").click(function(e) {
                e.stopPropagation();
                var id = get_selected_row();
                if(id){
                   crear_baja("/clinicas/delete/", id);
                }
                e.stopPropagation();
            });

            $("#modificar").click(function(e){
                var id = get_selected_row();
                if(id){
                    var url = "/clinicas/update/" + id +"/";
                    $(this).attr("href", url);
                }
                e.stopPropagation();
            });

    });
    </script>
